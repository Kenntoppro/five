tir = float(input('Значение звука: '))
if tir >= 0 and tir < 40:
   print('тише чем тихая комната')
if tir == 40:
   print('тихая комната')
if tir > 40 and tir < 70:
   print('громче тихой комнаты, но тише будильника')
if tir == 70:
   print('будильник')
if tir > 70 and tir < 106:
   print('громче будильника, но тише газонокосилки')
if tir == 106:
   print('газовая газонокосилка')
if tir > 106 and tir < 130:
   print('громче газонокосилки, но тише отбойного молотка')
if tir == 130:
   print('отбойный молоток')
if tir > 130:
   print('громче отбойного молотка')
